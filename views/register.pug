doctype html
html(lang="ko")
    head
        meta(charset="utf-8")
        title Hackingcamp CTF
        link#bootstrap-css(href='https://cdn.jsdelivr.net/npm/bootstrap@3.1.1/dist/css/bootstrap.min.css', rel='stylesheet')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@3.1.1/dist/js/bootstrap.min.js')
        script(src='https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js')
    body
        div.container
            div#loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:50px;')
                .panel.panel-info
                    .panel-heading
                        .panel-title Login to Hackingcamp CTF
                        div(style='float:right; font-size: 80%; position: relative; top:-10px')
                            a(href='#') Forgot password?
                    .panel-body(style='padding-top:30px')
                        #login-alert.alert.alert-danger.col-sm-12(style='display:none')
                        form#loginform.form-horizontal(role='form')
                            .input-group(style='margin-bottom: 25px')
                                span.input-group-addon
                                    i.glyphicon.glyphicon-user
                                input#login-username.form-control(type='text', name='username', value='', placeholder='username or email')
                            .input-group(style='margin-bottom: 25px')
                                span.input-group-addon
                                    i.glyphicon.glyphicon-lock
                                input#login-password.form-control(type='password', name='password', placeholder='password')
                            .input-group
                                .checkbox
                                    label
                                        input#login-remember(type='checkbox', name='remember', value='1')
                                        |  Remember me
                            .form-group(style='margin-top:10px')
                                // Button
                                .col-sm-12.controls
                                    a#btn-login.btn.btn-success(href='#') Login  
                                    a#btn-fblogin.btn.btn-primary(href='#') Login with Facebook
                            .form-group
                                .col-md-12.control
                                    div(style='border-top: 1px solid#888; padding-top:15px; font-size:85%')
                                        | Don't have an account! 
                                        a(href='#', onclick="$('#loginbox').hide(); $('#signupbox').show()")
                                            | Sign Up Here
        #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='display:none; margin-top:50px')
            .panel.panel-info
                .panel-heading
                    .panel-title Register to Hackingcamp CTF
                    div(style='float:right; font-size: 85%; position: relative; top:-10px')
                        a#signinlink(href='#', onclick="$('#signupbox').hide(); $('#loginbox').show()") Sign In
                .panel-body
                    form#signupform.form-horizontal(role='form', action='/register', method='post')
                        #signupalert.alert.alert-danger(style='display:none')
                            p Error:
                            span
                        .form-group
                            label.col-md-3.control-label(for='email') Team Name
                            .col-md-9
                                input.form-control(type='text', name='email', placeholder='Team Name')
                        .form-group
                            label.col-md-3.control-label(for='firstname') Captain Name
                            .col-md-9
                                input.form-control(type='text', name='firstname', placeholder='First Name')
                        .form-group
                            label.col-md-3.control-label(for='password') Password
                            .col-md-9
                                input.form-control(type='password', name='passwd', placeholder='Password')
                        .form-group
                            label.col-md-3.control-label(for='password') Password Again
                            .col-md-9
                                input.form-control(type='password', name='passwd', placeholder='Password')
                        .form-group
                            // Button
                            .col-md-offset-3.col-md-9
                                button#btn-signup.btn.btn-info(type='submit')
                                    i.icon-hand-right
                                    |  &nbsp Sign Up
                                span(style='margin-left:8px;')