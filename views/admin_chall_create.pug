doctype html
html(lang="ko")
    head 
        meta(charset="utf-8")
        title Hackingcamp CTF
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css", rel="stylesheet")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap-theme.min.css", rel="stylesheet")
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js")
        
    body
        .container
            h1 Hackingcamp CTF Managing Page
            br
            br

            form(action="/secretjuju/createChallenge", method="post" enctype="multipart/form-data")
                div.form-group
                    label Title
                    input.form-control(type="text", name="title")
                div.form-group
                    lable Category
                    select.form-control(name="category")
                        option Pwnable
                        option Reversing
                        option Webhacking
                        option Misc
                        option Crypto
                        option Forensic
                        option Network
                        option Programming
                div.form-group
                    lable Author
                    input.form-control(type="text", name="author")
                div.form-group
                    label Description
                    textarea.form-control(rows="6", name="description")
                div.form-group
                    label Flag
                    input.form-control(type="text", name="flag")
                
                .form-group
                    input(type="checkbox", class="form-check-input", name="hidden")
                    label &nbsp;hidden    
                
                div.form-group
                    label File
                    div#files
                        input.form-control(type='file', name='file[]')
                    br
                    button#addfile.btn.btn-secondary(type="button") add file
                br
                button.btn.btn-primary.mb-2 Publish
            br 
            br
        script(type="text/javascript")
            include admin_chall_create.js