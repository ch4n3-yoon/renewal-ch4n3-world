doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title Admin Page
        script(type='text/javascript', src='https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js')
        script(type='text/javascript', src='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css')
        style.
            /* Made by ch4n3 */
            .navigation {
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            }
            .navigation-ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
                background-color: #333333;
                overflow: hidden;
            }
            .navigation-li {
                float: left;
            }
            .navigation-li a {
                display: block;
                color: #ffffff;
                text-align: center;
                text-decoration: none;
                padding: 1em 1em;
            }
            .navigation-li a:hover {
                background-color: #111;
            }
            .menu:hover {
                background-color: #111;
                color: white;
                text-decoration: none;
            }
            .active {
                background-color: #4CAF50;
            }
            .active:hover {
                background-color: #4CAF50;
            }
            .container {
                padding: 2em;
            }
            .form-ul {
                list-style: none;
            }
            .form-li {
                margin-top: 1em;
                margin-bottom: 1em;
            }
    body
        .navigation
            ul.navigation-ul
                li.navigation-li
                    a.menu.active(href='#') Admin Page
                li.navigation-li
                    a.menu(href='#') Challenge Creation
                li.navigation-li
                    a.menu(href='#') Challenge Manage
                li.navigation-li
                    a.menu(href='#') Memeber Manage
                li.navigation-li
                    a.menu(href='#') Server Manage
                li.navigation-li
                    a.menu(href='#') Server Info
        .container
            h1 Challenge Creation
            fieldset.menu-description
                legend Challenge Creation
                form.form-group(action='#', method='post')
                    ul.form-ul
                        li.form-li
                            .row
                                .col-md-2
                                    | Title :
                                input.form-control.col-md-4(type='text', name='title')
                        li.form-li
                            .row
                                .col-md-2
                                    | Author :
                                input.form-control.col-md-4(type='text', name='author')
                        li.form-li
                            .row
                                .col-md-2
                                    | Category :
                                select.form-control.col-md-4(name='category')
                                    option Pwnable
                                    option Reversing
                                    option Web Hacking
                                    option Misc
                                    option Crypto
                                    option Forensic
                                    option Network
                        li.form-li
                            .row
                                .col-md-2
                                    | Description :
                                textarea.form-control.col-md-5(name='description', rows='4')
                        li.form-li
                            .row
                                .col-md-2
                                    | Flag :
                                input.form-control.col-md-4(type='text', name='flag')
                        li.form-li
                            .row
                                .col-md-2
                                    | Hidden :
                                input(type='checkbox', name='hidden')
                        li.form-li
                            .row
                                .col-md-2
                                    | File :
                                #files
                                    p
                                        input(type='file', name='file[]')
                                button#addfile.btn.btn-secondary(type='button') add file
                        li.form-li
                            button.btn.btn-primary Send
        script(type='text/javascript').
            $("#addfile").click(function() {
                let inputfile = `<p><input type="file" name="file[]"></p>`;
                $("#files").append(inputfile);
            });
