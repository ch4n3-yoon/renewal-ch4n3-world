doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title Admin Page
        link(ref='stylesheet', href='admin_navigation_bar.css')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css')
        script(type='text/javascript', src='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js')
        script(type='text/javascript', src='https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js')
        style.
            .navigation-ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
                background-color: #333333;
                overflow: hidden;
            }
            .navigation-li {
                float: left;
            }
            .navigation-li a {
                display: block;
                color: #ffffff;
                text-align: center;
                text-decoration: none;
                padding: 1em 1em;
                /* margin: 1em; */
            }
            .navigation-li a:hover {
                background-color: #111;
            }
            .menu:hover {
                background-color: #111;
                color: white;
                text-decoration: none;
            }
            .active {
                background-color: #4CAF50;
            }
            .active:hover {
                background-color: #4CAF50;
            }
            .container {
                padding: 2em;
            }
    body
        .navigation
            ul.navigation-ul
                li.navigation-li
                    a.menu(href='#') Admin Page
                li.navigation-li
                    a.menu(href='#') Challenge Creation
                li.navigation-li
                    a.menu(href='#') Challenge Manage
                li.navigation-li
                    a.menu(href='#') Memeber Manage
                li.navigation-li
                    a.menu(href='#') Server Manage
                li.navigation-li
                    a.menu.active(href='#') Server Info
        .container
            h1 Server Information
            fieldset
                legend 서버 정보
                ul
                    li
                        p
                            | OS : #{os} #{os_version}
                    li
                        p Nodejs version : #{js_version}
                    li
                        p Time zone : #{timezone}
