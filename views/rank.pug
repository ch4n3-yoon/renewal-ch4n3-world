doctype html
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title ch4n3 world
    meta(name='viewport' content='width=device-width, initial-scale=1')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4/dist/js/bootstrap.min.js')
    script(src='https://cdn.jsdelivr.net/npm/jquery@3/dist/jquery.min.js')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4/dist/css/bootstrap-grid.min.css')
    link(href='https://fonts.googleapis.com/css?family=Nanum+Gothic+Coding|Ubuntu&display=swap' rel='stylesheet')
    link(rel='stylesheet' href='/css/rank.css')

.container.content
    h1.header ch4n3 world
    nav
        ul.menu
            li
                a(href='/rank') RANK
            | |
            li
                a(href='/challenge') CHALLENGE
            | |
            if !session.user_no
                li
                    a(href='/login') LOGIN
            else
                li
                    a(href='/logout') LOGOUT
            if session.admin
                .
                    |
                li
                    a(href=`/${__admin_path__}`) ADMIN
    hr
    h2.title ðŸ™‰ RANK ðŸ™‰
    table.table.table-hover
        thead
            tr
                th.text-center(scope='col') #
                th Nickname
                th.text-center Score
                th Last Authentication (KST)
        tbody
            - var i = 0;
            each user in users
                - i++;
                tr
                    td.text-center(scope='row') #{i}
                    td
                        a(href=`/user/${user.no}`) #{user.nickname}
                    td.text-center #{user.point}pt
                    td(data-timestamp=(new Date(user.lastsolvetime).getTime())) #{user.lastsolvetime}

